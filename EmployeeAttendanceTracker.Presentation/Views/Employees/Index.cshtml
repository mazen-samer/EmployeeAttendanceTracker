@model IEnumerable<EmployeeAttendanceTracker.Business.DTOs.EmployeeSummaryDto>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmployeeCode)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
            <th>Current Month Summary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EmployeeCode)</td>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>
                    Present: @item.PresentDays | Absent: @item.AbsentDays (@item.AttendancePercentage%)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeCode">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeCode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>